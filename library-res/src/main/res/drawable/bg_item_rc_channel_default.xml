<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 阴影层 -->
    <item>
        <shape>
            <solid android:color="@color/clr_grey_20" /> <!-- 颜色#8869E6 10%透明度，即1A8869E6 -->
            <corners android:radius="8dp" />
        </shape>
        <padding
            android:bottom="8dp"
            android:left="0dp"
            android:right="0dp"
            android:top="8dp" /> <!-- 阴影的 Y 轴偏移 -->
    </item>
    <item>
        <shape>
            <solid android:color="@color/clr_main_09" />
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/clr_main_04" />
            <corners android:radius="8dp" /> <!-- 设置模糊的边界 -->
        </shape>
    </item>

</layer-list>