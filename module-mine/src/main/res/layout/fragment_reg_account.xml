<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_blue">

            <View
                android:id="@+id/view1"
                android:layout_width="3dp"
                android:layout_height="14dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/icon_title_right"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="开户配额"
                android:textColor="@color/clr_txt_black_cm"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/view1"
                app:layout_constraintStart_toEndOf="@+id/view1"
                app:layout_constraintTop_toTopOf="@+id/view1" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/bg_white_r12"
                android:paddingStart="12dp"
                android:paddingTop="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="12dp"
                app:layout_constraintTop_toBottomOf="@+id/view1">

                <TextView
                    android:id="@+id/tv_type"
                    style="@style/style_filter_info_value"
                    android:text="@string/txt_type"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_select_type"
                    style="@style/style_filter_info_spn"
                    android:layout_width="0dp"
                    android:textColor="@color/tv_color_reg_pro"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_type"
                    app:layout_constraintStart_toEndOf="@+id/tv_type"
                    app:layout_constraintTop_toTopOf="@+id/tv_type"
                    tools:text="大招商" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/clr_grey_080"
                    app:layout_constraintEnd_toEndOf="@+id/et_name"
                    app:layout_constraintStart_toStartOf="@+id/tv_select_type"
                    app:layout_constraintTop_toBottomOf="@+id/tv_select_type" />

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/style_filter_info_value"
                    android:layout_marginTop="6dp"
                    android:text="@string/txt_user_name"
                    app:layout_constraintStart_toStartOf="@+id/tv_type"
                    app:layout_constraintTop_toBottomOf="@+id/tv_type" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@null"
                    android:hint="@string/txt_user_name"
                    android:inputType="textVisiblePassword"
                    android:maxLength="16"
                    android:textColor="@color/clr_txt_black_cm"
                    android:textColorHint="@color/clr_txt_04"
                    android:textSize="14dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_name"
                    app:layout_constraintTop_toBottomOf="@+id/tv_type" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/clr_grey_080"
                    app:layout_constraintEnd_toEndOf="@+id/et_name"
                    app:layout_constraintStart_toStartOf="@+id/et_name"
                    app:layout_constraintTop_toBottomOf="@+id/et_name" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/txt_reg_name_tip"
                    android:textColor="@color/clr_txt_warn"
                    android:textSize="@dimen/bt_text_12sp"
                    app:layout_constraintEnd_toEndOf="@+id/et_name"
                    app:layout_constraintStart_toStartOf="@+id/et_name"
                    app:layout_constraintTop_toBottomOf="@+id/et_name" />

                <TextView
                    android:id="@+id/tv_login_pwd"
                    style="@style/style_filter_info_value"
                    android:layout_marginTop="6dp"
                    android:text="@string/txt_login_pwd"
                    app:layout_constraintStart_toStartOf="@+id/tv_type"
                    app:layout_constraintTop_toBottomOf="@+id/textView4" />

                <EditText
                    android:id="@+id/et_login_pwd"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@null"
                    android:hint="@string/txt_login_pwd"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:textColor="@color/clr_txt_black_cm"
                    android:textColorHint="@color/clr_txt_04"
                    android:textSize="14dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_login_pwd"
                    app:layout_constraintEnd_toEndOf="@+id/et_name"
                    app:layout_constraintStart_toEndOf="@+id/tv_name"
                    app:layout_constraintTop_toTopOf="@+id/tv_login_pwd" />
                <CheckBox
                    android:id="@+id/ckb_eye"
                    style="@style/style_cm_ckb_eye"
                    app:layout_constraintBottom_toBottomOf="@+id/et_login_pwd"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/et_login_pwd" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/clr_grey_080"
                    app:layout_constraintEnd_toEndOf="@+id/et_name"
                    app:layout_constraintStart_toStartOf="@+id/et_name"
                    app:layout_constraintTop_toBottomOf="@+id/et_login_pwd" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/txt_reg_pwd_tip"
                    android:textColor="@color/clr_txt_warn"
                    android:textSize="@dimen/bt_text_12sp"
                    app:layout_constraintEnd_toEndOf="@+id/et_name"
                    app:layout_constraintStart_toStartOf="@+id/et_name"
                    app:layout_constraintTop_toBottomOf="@+id/et_login_pwd" />

                <TextView
                    android:id="@+id/tv_user_name"
                    style="@style/style_filter_info_value"
                    android:layout_marginTop="6dp"
                    android:text="@string/me_user_nickname"
                    app:layout_constraintStart_toStartOf="@+id/tv_type"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />

                <EditText
                    android:id="@+id/et_user_name"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@null"
                    android:hint="@string/me_user_nickname"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLength="12"
                    android:textColor="@color/clr_txt_black_cm"
                    android:textColorHint="@color/clr_txt_04"
                    android:textSize="14dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_user_name"
                    app:layout_constraintEnd_toEndOf="@+id/et_name"
                    app:layout_constraintStart_toEndOf="@+id/tv_name"
                    app:layout_constraintTop_toTopOf="@+id/tv_user_name" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/clr_grey_080"
                    app:layout_constraintEnd_toEndOf="@+id/et_name"
                    app:layout_constraintStart_toStartOf="@+id/et_name"
                    app:layout_constraintTop_toBottomOf="@+id/et_user_name" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/txt_reg_nickname_tip"
                    android:textColor="@color/clr_txt_warn"
                    android:textSize="@dimen/bt_text_12sp"
                    app:layout_constraintEnd_toEndOf="@+id/et_name"
                    app:layout_constraintStart_toStartOf="@+id/et_name"
                    app:layout_constraintTop_toBottomOf="@+id/et_user_name" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="3dp"
                android:layout_height="14dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/icon_title_right"
                app:layout_constraintStart_toStartOf="@id/view1"
                app:layout_constraintTop_toBottomOf="@+id/layout1" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="快速返点设置"
                android:textColor="@color/clr_txt_black_cm"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/view2"
                app:layout_constraintStart_toEndOf="@+id/view2"
                app:layout_constraintTop_toTopOf="@+id/view2" />

            <include
                android:id="@+id/include0"
                layout="@layout/layout_quick_rebate" />

            <include
                android:id="@+id/include1"
                layout="@layout/layout_quick_rebate"
                android:visibility="gone" />

            <Button
                android:id="@+id/bt_create_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/bg_btn_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="创建用户"
                android:textColor="@color/clr_text_code_selector"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/include0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>