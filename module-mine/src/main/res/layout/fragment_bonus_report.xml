<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/clr_bg_main"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/tvw_title"
                style="@style/style_cm_title"
                android:text="@string/me_bonus_report"
                app:layout_constraintBaseline_toBaselineOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/ivw_back"
                style="@style/style_ic_title_back"
                android:src="@mipmap/cm_ic_back"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin"
            android:background="@drawable/bg_white_6"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:paddingEnd="12dp">


            <TextView
                android:id="@+id/tvw_server_fee_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom|start"
                android:text="代理服务费"
                android:textColor="@color/clr_txt_03"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0" />

            <TextView
                android:id="@+id/tvw_server_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:gravity="bottom|start"
                android:text="查看制度"
                android:textColor="@color/clr_green_01"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/tvw_server_fee_title"
                app:layout_constraintTop_toTopOf="@id/tvw_server_fee_title"
                app:layout_constraintVertical_bias="0" />

            <ImageView
                android:id="@+id/ivw_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/bt_icon_hint"
                app:layout_constraintBottom_toBottomOf="@id/tvw_item_server_fee"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvw_item_server_fee" />

            <TextView
                android:id="@+id/filter1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin"
                android:gravity="bottom|start"
                android:text="起始日期"
                android:textColor="@color/clr_txt_03"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvw_server_fee_title"
                app:layout_constraintVertical_bias="0" />

            <TextView
                android:id="@+id/tvw_starttime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableBottom="@drawable/divider_horizontal"
                android:gravity="bottom|start"
                android:textColor="@color/clr_txt_black_cm"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@id/tvw_server_fee"
                app:layout_constraintTop_toTopOf="@id/filter1"
                app:layout_constraintVertical_bias="0" />

            <TextView
                android:id="@+id/filter2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin"
                android:gravity="bottom|start"
                android:text="截止日期"
                android:textColor="@color/clr_txt_03"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/filter1"
                app:layout_constraintVertical_bias="0" />

            <TextView
                android:id="@+id/tvw_endtime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableBottom="@drawable/divider_horizontal"
                android:gravity="bottom|start"
                android:textColor="@color/clr_txt_black_cm"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@id/tvw_server_fee"
                app:layout_constraintTop_toTopOf="@id/filter2"
                app:layout_constraintVertical_bias="0" />

            <TextView
                android:id="@+id/filter3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin"
                android:gravity="bottom|start"
                android:text="状态"
                android:textColor="@color/clr_txt_03"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/filter2"
                app:layout_constraintVertical_bias="0" />

            <TextView
                android:id="@+id/tvw_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableEnd="@mipmap/bt_icon_expand"
                android:drawableBottom="@drawable/divider_horizontal"
                android:gravity="bottom|start"
                android:text="全部"
                android:textColor="@color/clr_white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@id/tvw_server_fee"
                app:layout_constraintTop_toTopOf="@id/filter3"
                app:layout_constraintVertical_bias="0" />

            <TextView
                android:id="@+id/btn_check"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/shape_gradient_main_c10"
                android:gravity="center"
                android:text="查询"
                android:textColor="@color/clr_white"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/filter3"
                app:layout_constraintVertical_bias="1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_valid_bet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginEnd="@dimen/layout_margin"
            android:layout_marginBottom="@dimen/layout_margin"
            android:background="@drawable/bg_white_6"
            android:orientation="vertical"
            android:padding="@dimen/layout_margin"
            android:visibility="visible"
            tools:visibility="visible">

            <TextView
                android:id="@+id/tvw_all"
                style="@style/style_item_report_title"
                android:text="@string/txt_bonus_all"
                android:textColor="@color/clr_white"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvw_total_title"
                style="@style/style_item_report_title"
                android:layout_marginTop="@dimen/layout_margin"
                android:text="@string/txt_bonus_server_total"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvw_all" />

            <TextView
                android:id="@+id/tvw_total"
                style="@style/style_item_report_title_center"
                android:textColor="@color/clr_white"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/tvw_total_title"
                app:layout_constraintTop_toTopOf="@id/tvw_total_title"
                tools:text="20" />

            <TextView
                android:id="@+id/tvw_own_title"
                style="@style/style_item_report_title_center"
                android:layout_marginTop="@dimen/layout_margin"
                android:text="@string/txt_bonus_own"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvw_total_title" />

            <TextView
                android:id="@+id/tvw_own"
                style="@style/style_item_report_title_center"
                android:textColor="@color/clr_white"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/tvw_own_title"
                app:layout_constraintTop_toTopOf="@id/tvw_own_title"
                tools:text="999" />

            <TextView
                android:id="@+id/tvw_under_title"
                style="@style/style_item_report_title_end"
                android:layout_marginTop="@dimen/layout_margin"
                android:text="@string/txt_bonus_under"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvw_own_title" />

            <TextView
                android:id="@+id/tvw_under"
                style="@style/style_item_report_title_center"
                android:textColor="@color/clr_white"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/tvw_under_title"
                app:layout_constraintTop_toTopOf="@id/tvw_under_title"
                tools:text="-----" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.scwang.smart.refresh.layout.SmartRefreshLayout
            android:id="@+id/refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.scwang.smart.refresh.header.ClassicsHeader
                android:id="@+id/refresh_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="0dp"
                tools:ignore="ScrollViewCount">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ll_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tvw_no_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="36dp"
                        android:drawableTop="@mipmap/img_no_data"
                        android:drawablePadding="12dp"
                        android:gravity="center"
                        android:text="@string/txt_no_data"
                        android:textColor="@color/clr_txt_01"
                        tools:visibility="visible" />

                    <com.xtree.base.widget.MaxRecyclerView
                        android:id="@+id/rcv_main"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.core.widget.NestedScrollView>

            <com.scwang.smart.refresh.footer.ClassicsFooter
                android:id="@+id/refresh_footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.scwang.smart.refresh.layout.SmartRefreshLayout>
    </LinearLayout>
</layout>